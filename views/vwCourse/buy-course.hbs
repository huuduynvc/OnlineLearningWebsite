{{#section 'css'}}
  <style>
    a:hover{
      text-decoration: none;
    }
  </style>
{{/section}}

{{#section 'js'}}

{{/section}}

  <main>
    <div class="container">
      <nav aria-label="breadcrumb">
      <ol class="breadcrumb" style="background-color: #ffffff!important; margin-bottom:0px!important">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Mua khóa học</li>
      </ol>
    </nav>
    </div>
    <div class="page-section bg-light" style="padding-top:0px!important">
      <div class="container">

        <div class="row justify-content-center">
          <div class="col-lg-8 py-3">
            <div class="blog-single-wrap">
              <div class="card">
                <div class="row p-3">
                  <div class="col-sm-3">
                    <img src="/img/course/{{course.id}}.jpg" style="width:150px; height: 100px; border-radius:5px;" alt="{{course.name}}">
                  </div>
                  <div class="col-sm-8">
                    <a href="/course/{{course.id}}"><strong>{{course.name}}</strong></a>
                    <p class="m-0">
                      {{#each teacher}}
                      {{this.fullname}}, 
                      {{/each}}
                    </p>
                    <p class="m-0"><span class="text-danger font-weight-bold">{{course.current_price}} đ</span> <del class="text-muted">{{course.price}} đ</del></p>
                  </div>
                  <div class="col-sm-1 text-right">
                    <a href="/course/{{course.id}}"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i></a></div>
                </div>
              </div>
            </div> <!-- .blog-single-wrap -->

          </div>

          <div class="col-lg-4 py-3">
            <div class="widget">
              <div class="widget-box">

                <h5 class="mb-3">Thông tin đơn hàng</h5>

                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                    <strong>{{course.name}}</strong>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                    Giá khóa học
                    <span>{{course.price}} đ</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                    Giảm giá
                    <span>{{course.offer}} %</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                    <div>
                      <strong>Tổng tiền</strong>
                    </div>
                    <span><strong>{{course.current_price}} đ</strong></span>
                  </li>
                </ul>
                <form id="fbuy" method="POST"></form>
                <a class="dropdown-item" href="javascript: $('#fbuy').submit();" style="padding:0;">
                <button type="button" class="btn btn-danger btn-block">Tiến hành đặt mua</button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>