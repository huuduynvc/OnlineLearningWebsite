              <div class="widget-box">
                <h3 class="widget-title">Khóa học liên quan</h3>
                <div class="divider"></div>
                {{#each top5course}}
                  <div class="blog-item">
                    <div class="content">
                      <h6 class="post-title"><a href="#">{{this.name}}</a></h6>
                      <div>
