                  <a href="#" class="tag-link">Coronavirus</a>
                </div> --}}
              </div>
            </div> <!-- .blog-single-wrap -->

            <div class="comment-form-wrap pt-5">
              <h3>Đề cương khóa học</h3>
            <div class="accordion" id="accordionExample">
              {{#each course_detail.chapter_lesson}}
              <div class="card">
                <div class="card-header" id="heading{{this.id}}">
                  <h2 class="mb-0">
                    <button class="btn btn-link text-left" style="width: 100%" type="button" data-toggle="collapse" data-target="#collapse{{this.id}}" aria-expanded="true" aria-controls="collapse{{this.id}}">
                      {{this.name}}
                    </button>
                  </h2>
                </div>

                <div id="collapse{{this.id}}" class="collapse show" aria-labelledby="heading{{this.id}}" data-parent="#accordionExample">

                  {{#each this.lesson}}
                  <div class="card-body border-bottom">
                    {{this.name}}
                  </div>
                  {{/each}}
                </div>
              </div>
              {{/each}}
            </div>              
            </div> <!-- .comment-form-wrap -->


            <div class="comment-form-wrap pt-5">
              <h3>Giáo viên</h3>
              <div class="teacher-info">
                      {{#each this.teacher}}
                    <div class="row">
                      <div class="col-sm-4">
                        <img class="rounded-circle" style="width:150px; height:150px;" alt="100x100" src="/img/user/{{this.id}}.jpg"
                        data-holder-rendered="true">
                      </div>
                      <div class="col-sm-8">
                        <h5 class="my-2">{{this.fullname}}</h5>
                        <p>Thông tin chung: {{this.info}}</p>
                        <p>Số điện thoại: {{this.phone}}</p>  
                        <p>Email: {{this.email}}</p>                          
                      </div>
                    </div>   
                      {{/each}} 
              </div>
            </div> <!-- .comment-form-wrap -->

            <div class="comment-form-wrap pt-5">
              <h3>Bình luận</h3>
              <form action="#" class="">
                <div class="form-row form-group">
                  <div class="col-md-6">
                    <label for="name">Tên *</label>
                    <input type="text" class="form-control" id="name">
                  </div>
                  <div class="col-md-6">
                    <label for="email">Số điện thoại *</label>
                    <input type="email" class="form-control" id="email">
                  </div>
                </div>
                <div class="form-group">
                  <label for="website">Email</label>
                  <input type="url" class="form-control" id="website">
                </div>
    
                <div class="form-group">
                  <label for="message">Tin nhắn</label>
                  <textarea name="msg" id="message" cols="30" rows="8" class="form-control"></textarea>
                </div>
                <div class="form-group">
                  <input type="submit" value="Đăng bình luận" class="btn btn-primary">
                </div>
    
              </form>
            </div> <!-- .comment-form-wrap -->  
          </div>

          <div class="col-lg-4 py-3">
            <div class="widget">
              <div class="widget-box">
                <h3 class="widget-title">Tìm kiếm</h3>
                <div class="divider"></div>
                <form action="#" class="search-form">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="Lĩnh vực hoặc khóa học">
                    <button type="submit" class="btn"><span class="icon mai-search"></span></button>
                  </div>
                </form>
              </div>
              <div class="widget-box">
                <h3 class="widget-title">Lĩnh vực</h3>
                <div class="divider"></div>
                <ul class="categories">
                  {{#each topCat}}
                  <li><a href="#">{{this.name}} </a></li>
                  {{/each}}
                  
