<script>
      var validated = function(){
			var error = validated_name();
      if(error){
        error = validated_username();
        if(error){
          error = validated_password();
          if(error){
            error = validated_confirm();
            if(error){
              error = validated_email();
              if(error){
                error = validated_Phone();
              }
            }
          }       
        }
      }
			return error;
		};
  $('#frmRegister').on('submit', function (e) {
    
    if(validated()){
      e.preventDefault();
      const username = $('#txtUsername').val();
      $.getJSON(`/account/is-available?user=${username}`, function (data) {
        if (data === true) {
          $('#frmRegister').off('submit').submit();
        } else {         
          alert('Tên tài khoản đã tồn tại.');
        }
      })
    }
  });
  $('#txtDOB').datetimepicker({
    format: 'd/m/Y',
    timepicker: false,
    mask: true,
  });
    		var validated_name = function(){
			var name = document.getElementById("txtName").value;
			//var noticeName = document.getElementById("noticeName");
			if(name === null || name === ''){
				alert("Xin vui lòng điền họ và tên của bạn.");
				return false;
			}
			else{
				return true;
			}
		}
    var validated_username = function(){
			var name = document.getElementById("txtUsername").value;
			//var noticeName = document.getElementById("noticeName");
			if(name === null || name === ''){
				alert("Xin vui lòng điền tên tài khoản của bạn.");
				return false;
			}
			else{
				return true;
			}
		}
    var validated_password = function(){
			var pass = document.getElementById("txtPassword").value;
			if(pass === null || pass === ''){
				alert("Xin vui lòng điền mật khẩu của bạn.");
				return false;
			}
			else{
				return true;
			}
		}
    var validated_confirm= function(){
      var pass = document.getElementById("txtPassword").value;
			var confirm = document.getElementById("txtConfirm").value;
			if(confirm === null || confirm === '' || confirm !== pass){
				alert("Xác nhận mật khẩu sai.");
				return false;
			}
			else{
				return true;
			}
		}
		var validated_email = function(){
			var email = document.getElementById("txtEmail").value;
			var reg_mail = /^[A-Za-z0-9]+([_\.\-]?[A-Za-z0-9])*@[A-Za-z0-9]+([\.\-]?[A-Za-z0-9]+)*(\.[A-Za-z]+)+$/;
			if(email === '' || email === null ||reg_mail.test(email) === false){		
        alert("Email không hợp lệ.");
				return false;
			}
			else{
				return true;
			}
		}
var validated_Phone = function(){
			var phone = document.getElementById("txtPhone").value;
			if(phone === null || phone === '' || phone.length !== 10 ){
				alert("Số điện thoại không hợp lệ.");
				return false;
			}
			else{
				return true;
			}
		}
  
