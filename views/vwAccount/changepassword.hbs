{{#section 'css'}}
<style>
    a{
        color: black;
    }
    a:hover{
        text-decoration: none;
    }
    a:focus{
        color: blue;
    }
</style>
{{/section}}

{{#section 'js'}}

{{/section}}

  <main>
    <div class="container">
      <nav aria-label="breadcrumb">
      <ol class="breadcrumb" style="background-color: #ffffff!important; margin-bottom:0px!important">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thay đổi mật khẩu</li>
      </ol>
    </nav>
    </div>
    <div class="page-section bg-light" style="padding-top:0px!important">
      <div class="container">

        <div class="row justify-content-center">
          <div class="col-md-4 py-3">
            <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-3">
                        <img class="rounded-circle" style="width:60px; height:60px;" alt="100x100" src="/img/user/{{user.avatar}}"
                        data-holder-rendered="true">
                    </div>
                    <div class="col-sm-9">
                        <h5>{{user.fullname}}</h5>
                        {{role}}
                    </div>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item" style="border-left: 5px solid blue;"><a href="/account/profile"><strong>Thông tin tài khoản</strong></a></li>
                <li class="list-group-item"><a href="/account/watchlist"><strong>Danh sách khóa học yêu thích</strong></a></li>
            </ul>
            </div>  
          </div>

          <div class="col-md-8 py-3">
            <div class="card">
            <div class="card-header py-4 d-flex align-items-center">
                <h5>Thay đổi mật khẩu</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="row">
                {{#if err_message}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert" style="width:100%">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  {{err_message}}
                </div>
                {{/if}}
                    </div>
                    <div class="row">
                    <div class="col-sm-12  ml-2">
                        <form method="post">
                            <div class="form-group">
                                <div class="row my-4">
                                    <div class="col-sm-4 d-flex align-items-center">
                                        <strong>Mật khẩu cũ</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="txtPassword" name="txtPassword">
                                    </div>
                                </div>
                                <div class="row my-4">
                                    <div class="col-sm-4 d-flex align-items-center">
                                        <strong>Mật khẩu mới</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="txtNewpass" name="txtNewpass">
                                    </div>
                                </div>
                                <div class="row my-4">
                                    <div class="col-sm-4 d-flex align-items-center">
                                        <strong>Xác nhận lại mật khẩu</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="txtConfirm" name="txtConfirm">
                                    </div>
                                </div>
                                <div class="form-group mt-5 float-right">           
                                    <button type="submit" class="btn btn-primary px-5 ml-2">Lưu thay đổi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </main>