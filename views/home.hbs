        <div class="carousel-item active">
					<div class="row row-cols-5">
            {{#each topHot}}
                <div class="col">
                  <div class="thumb-wrapper">
                    <div class="course-card">
                      <div class="badge badge-danger">Hot</div>
                      <div class="header">
                        <img src="/img/course/{{id}}.jpg" alt="">
                      </div>
                      <div class="content text-left">
                        <p class="course-title"><a href="/course/{{caturl}}/{{id}}" title="Artificial Intelligence">{{this.name}}</a></p>
                        <small style="margin-bottom:0!important;color: #3f3c3c; white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">{{this.catname}}</small>
                        </br>
                        <small style="color: #676565; white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">
                          {{#each this.teacher}}
                          {{this.fullname}}, 
                          {{/each}}                         
                        </small>
                        <input class="rating-input" type="hidden" value="{{this.rating}}">
                        <div class="rating">
                          <span class="number-rating float-left"><b>{{this.rating}}</b></span>
                          {{{this.rating_star}}}
                        
                          <span class="person-rating" style="color:black;">({{this.num_of_rating}})</span>
                        </div>
                        <div class="price" style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">
                          <span class="text-danger font-weight-bold">{{this.current_price}} đ</span> <del class="text-muted">{{this.price}} đ</del>
                        </div>
                      </div>                     
                    </div>
                  </div>                                                                
                </div>
            {{/each}}
