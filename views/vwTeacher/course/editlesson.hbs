{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">
{{/section}}
{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#txtDes',
    height: 400,
    plugins: 'paste link autolink lists table',
    menubar: false,
    toolbar: [
      'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
    ],
    setup: editor => {
      editor.on('init', () => {
          editor.setContent(document.getElementById("value_content").value);
      });
    }
  });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
  $('#fuMain').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['png', 'jpg', 'gif'],
  });
</script>
{{/section}}
<div class="d-sm-flex align-items-center justify-content-between my-4">
    <h1 class="h3 mb-0 text-gray-800">Chỉnh sửa bài học</h1>
</div>
<div class="row">
  <div class="col-sm-10">
  <form method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="txtName">Tên bài học</label>
      <input type="text" class="form-control" id="txtName" name="txtName" value="{{lesson.name}}">
    </div>
        <div class="form-group">
        <input type="hidden" id="value_content" value="{{lesson.content}}">
        <label for="txtDes">Nội dung bài học</label>
        <textarea class="form-control" name="txtDes" id="txtDes" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group">
      <div><label for="id_chapter">Bài học thuộc chương</label></div>
      <div>
      <select name="id_chapter" id="id_chapter" style="width: 100%; height:38px;">
        <option value="{{mychapter.id}}" selected="selected">{{mychapter.name}}</option>
        {{#each chapters}}
        <option value={{id}}>{{name}}</option>
        {{/each}}
      </select>
      </div>
    </div>
    <div class="form-group">
      <div><label for="fuMain">Tải lên video bài học</label></div>
      <input id="fuMain" name="fuMain" type="file" class="file" multiple>
    </div>
    <button type="submit" class="btn btn-primary px-5">Thay đổi</button>
  </form>
  </div>
</div>